@model Fiap.Exemplo01.MVC.Web.Models.Cliente
<h2>Cadastrar cliente</h2>

@if (TempData["mensagem"] != null)
{
    <div class="alert alert-success">
        @TempData["Mensagem"]
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(c => c.Nome)
        @Html.TextBoxFor(c => c.Nome, new { placeholder = "Digite seu nome", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Idade)
        @Html.TextBoxFor(c => c.Idade, new { placeholder = "Digite a idade", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Credito)
        @Html.TextBoxFor(c => c.Credito, new { placeholder = "Digite o crédito", @class = "form-control" })
    </div>
    <div  class="form-group">
        @Html.LabelFor(c => c.DataNascimento)
        @Html.TextBoxFor(c => c.DataNascimento, new { placeholder = "Digite sua data de nascimento", @class= "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.EstadoCivil)
        @Html.DropDownListFor(c => c.EstadoCivil, ViewBag.Civil as SelectList, new { @class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.NecessidadesEspeciais)
        @Html.CheckBoxFor(c => c.NecessidadesEspeciais)
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
}
